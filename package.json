{
  "name": "amafor-gladiators",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=client",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:ci": "npm run test:all --workspace=client && npm run test --workspace=server",
    "lint": "npm run lint --workspaces --if-present",
    "validate-docs": "npm run validate-docs --workspace=client",
    "prepare": "husky"
  },
  "dependencies": {
    "rss-parser": "^3.13.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.7",
    "prettier": "^3.8.1"
  }
}

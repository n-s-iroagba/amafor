{
  "name": "amafor-gladiators",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=client",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:ci": "npm run test:all --workspace=client && npm run test --workspace=server",
    "lint": "npm run lint --workspaces --if-present",
    "validate-docs": "npm run validate-docs --workspace=client",
    "prepare": "husky"
  },
  "dependencies": {
    "rss-parser": "^3.13.0"
  },
  "devDependencies": {
    "husky": "^9.1.7"
  }
}